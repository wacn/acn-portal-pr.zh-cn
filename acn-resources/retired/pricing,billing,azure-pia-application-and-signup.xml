      <![CDATA[
      		<style>
      			.common-banner{
      			  height:300px;
      			  background:#ff7f5a;
      			}
				.flow-chart {
				  width: 100%;
				  height: 200px;
				  text-align: center;
				  background:#87d2cb;
				}
				.flow-chart .flow-chart-text{
				  width:1240px;
				  background:url('//wacndevelop.blob.core.chinacloudapi.cn/marketing-resource/media/images/pricing/billing/pia-application-flowchart.png') no-repeat bottom;
				  background-size:cover;
				  height:100%;
				  margin:0 auto;
				  padding-top:20px;
				  padding-left:0.5%;
				}
				.flow-chart span{
				  font-size:20px;
				  color:#fff;
				  float:left;
				  width:16.7%;
				}
				.section-component:first-child {
				  margin-top: 60px;
				}
				.step-icon {
				  width: 60px;
				  float: left;
				  margin-right: -60px;
				  position: relative;
				  margin-bottom: -10000px;
				  padding-bottom: 10000px;
				}
				.step-icon span {
				  display: block;
				  width: 60px;
				  height: 60px;
				  background: #ff7f5a;
				  color: #fff;
				  font-size: 40px;
				  text-align: center;
				  border-radius: 50%;
				  position: absolute;
				  top: 0px;
				  left: -6px;
				  border: 6px #fff solid;
				  box-sizing: content-box;
				}
				.step-icon:after {
				  display: inline-block;
				  content: '';
				  width: 20px;
				  background: #eee;
				  position: absolute;
				  top: 0;
				  left: 20px;
				  z-index: -1;
				  height: 100%;
				}
				.step-container {
				  float: left;
				  margin-left: 80px;
				  overflow:hidden;
				}
				.step-container h2{
				  line-height: 28px;
				  margin: 20px 0 0 -20px!important;
				}
				.step-container h2 span,.step-container .h2-title span {
				  color: #00a3d9 !important;
				  font-size:20px !important;
				}
				.step-container .h2-title {
				  font-size: 20px;
				  margin:30px 0 0!important;
				  line-height:28px;
				}
				.step-container img {
				  width: 100%;
				  margin: 10px 0;
				}
				.step-container a {
				  display: block;
				}
				.step-container a:hover {
				  border-bottom: 0 !important;
				}
				.step-container p a{
				  display:inline;
				}
				.step-container p a:hover {
				  border-bottom: 1px #00a3d9 solid !important;
				}
				.step-container p a{
				  display:inline;
				}
				.step-container p a:hover {
				  border-bottom: 1px #00a3d9 solid !important;
				}
				@media only screen and (max-width: 769px) {
				  .common-banner{
      				height:auto;
      				background:#ff7f5a;
      			  }
      			  .flow-chart{
      			    height:110px;
      			  }
				  .flow-chart .flow-chart-text{
					width: 100%;
				    padding-top:20px;
				    background-size:contain;
				  }
				  .flow-chart-text span{
				  	font-size:16px;
				  }
				  .section-component:first-child {
				    margin-top: 30px;
				  }
				  .step-icon {
				    width: 40px;
				    margin-right: -40px;
				  }
				  .step-icon span {
				    width: 40px;
				    height: 40px;
				    font-size: 30px;
				  }
				  .step-icon:after {
				    width: 10px;
				    left: 15px;
				  }
				  .step-container {
				    float: left;
				    margin-left: 60px;
