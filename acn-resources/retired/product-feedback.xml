<script type="text/javascript">
            (function(){
                $(document).on('click', function(evt){
                    if($(evt.target).parents(".drop-down").length == 0)
                        $(".drop-down ul").addClass("hide");
                })

                $(".drop-down").on("click", function(){
                    $(this).find("ul").toggleClass("hide");
                })

                $(document).on('click', '.pd-fd-content .drop-down ul a', function(evt){
                    evt.preventDefault();
                    $(this).closest(".drop-down").find(".value").text($(evt.target).text());
                    $(this).closest(".drop-down").find(".value").data("value", $(this).closest("li").data("id"));
                })

                // render service list
                var wacnApi = new WacnApi(WacnUserAppkey);
                wacnApi.getAllServices().then(function(services){
                    var newContent = "";
                    _(services).each(function(service){
                        newContent += "<li data-id='" + service.Id + "'><a>" + service.Name + "</a></li>";
                    })
                    $(".pd-fd-content .drop-down ul").html(newContent);
                })

                $(".pd-fd-container .pd-fd-submit").on("click", function(evt){
                    evt.preventDefault();
                    var serviceId = $(".pd-fd-content .drop-down .value").data("value");
                    var email = $(".pd-fd-email").val();
                    var description = $(".pd-fd-msg").val();
                    if(typeof serviceId == "undefined"){
                      alert("请选择一个想要反馈的服务");
                      return;
                    }
                    if(description.length < 10){
                      alert("反馈内容不能低于十个字");
                      return;
                    }
                    if(!validateEmail(email)){
                      $(".email-error").removeClass("hide");
                      return;
                    }

                    wacnApi.addNewProdFeedBack(serviceId, email, description).then(function(){
                      $(".pd-fd-success").removeClass("hide");
                      $(".email-error").addClass("hide");
                    }, function(){
                      alert("反馈发送失败，请检查输入后稍后重试。");
                    });
                })

                function validateEmail(email) {
                    var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
                    return re.test(email);
                }
            })();
</script>
