<?xml version="1.0" encoding="utf-8" ?>
<shd>
  <category name="核心平台">
    <service>
      <name>Active Directory</name>
      <slug>active-directory</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>Windowsazure.cn网站</name>
      <slug>azure-microsoft-cn</slug>
      <regions>
        <global>true</global>
      </regions>
    </service>
    <service>
      <name>管理门户</name>
      <slug>management-portal</slug>
      <regions>
        <global>true</global>
      </regions>
    </service>
    <service>
      <name>网络基础机构</name>
      <slug>network-access</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
  </category>
  <category name="常用服务">
    <service has-inner-services="true">
      <name>虚拟机</name>
      <slug>virtual-machines</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
      <inner-services>
        <service>
          <name>服务管理</name>
          <slug>virtual-machines\service-management</slug>
        </service>
      </inner-services>
    </service>
    <service has-inner-services="true">
      <name>SQL 数据库</name>
      <slug>sql-database</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
      <inner-services>
        <service>
          <name>管理门户</name>
          <slug>sql-database\management-portal</slug>
        </service>
        <service>
          <name>SQL Data Sync</name>
          <slug>sql-database\data-sync</slug>
        </service>
      </inner-services>
    </service>
    <service>
      <name>存储</name>
      <slug>storage</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service has-inner-services="true">
      <name>云服务</name>
      <slug>cloud-services</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
      <inner-services>
        <service>
          <name>服务管理</name>
          <slug>cloud-services\service-management</slug>
        </service>
      </inner-services>
    </service>
    <service>
      <name>CDN</name>
      <slug>cdn</slug>
      <regions>
        <global>true</global>
      </regions>
    </service>
  </category>
  <category name="其他服务">
    <service>
      <name>网站服务</name>
      <slug>web-sites</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>移动服务</name>
      <slug>mobile-services</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>站点恢复</name>
      <slug>site-recovery</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>事件中心</name>
      <slug>event-hubs</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service has-inner-services="true">
      <name>媒体服务</name>
      <slug>media-services</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
      <inner-services>
        <service>
          <name>媒体编码服务</name>
          <slug>media-services\encoding</slug>
        </service>
        <service>
          <name>按需流媒体服务</name>
          <slug>media-services\on-demand-streaming</slug>
        </service>
      </inner-services>
    </service>
    <service>
      <name>HDInsight</name>
      <slug>hdinsight</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>Service Bus</name>
      <slug>service-bus</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>通知中心</name>
      <slug>notification-hubs</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>虚拟网络</name>
      <slug>virtual-network</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
    <service>
      <name>Traffic Manager</name>
      <slug>traffic-manager</slug>
      <regions>
        <global>true</global>
      </regions>
    </service>
    <service>
      <name>备份</name>
      <slug>backup</slug>
      <regions>
        <china-east>true</china-east>
        <china-north>true</china-north>
      </regions>
    </service>
  </category>
</shd>