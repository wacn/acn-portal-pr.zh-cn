            <!-- BEGIN: Cognitive-Services-TopBanner -->
            <div class="common-banner col-top-banner" data-config="{'backgroundColor':'#e3f4ff', 'backgroundImage':'//wacnppe.blob.core.chinacloudapi.cn/marketing-resource/css/images/cognitive-translator-text-api-slice-01.png','imageHeight':'auto'}">
