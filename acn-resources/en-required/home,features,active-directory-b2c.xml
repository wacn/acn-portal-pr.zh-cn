            <!-- BEGIN: Product-Detail-TopBanner -->
            <div class="common-banner col-top-banner" data-config="{'backgroundColor':'#e3f4ff', 'backgroundImage':'//wacnppe.blob.core.chinacloudapi.cn/marketing-resource/media/images/production/activity_directory_b2c.png','imageHeight':'auto'}">
                <div class="common-banner-image">
                    <div class="common-banner-title">
                        <img src="//wacnppe.blob.core.chinacloudapi.cn/marketing-resource/media/images/production/active-directory-b2c@2x.svg" />
                        <h2>Azure Active Directory B2C</h2>
                        <h4>云中的客户标识和访问管理</h4>
                        <em><a href="/pricing/1rmb-trial/" id="home_active_trial">申请试用<i class="icon icon-arrow-right-thin"></i></a></em>
                        <a href="/pricing/pia/" id="home_active_pia">立即购买<i class="icon icon-arrow-right-thin"></i></a>
                    </div>
                </div>
