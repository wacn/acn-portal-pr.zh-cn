                }
                .cognitive-icon-group li div{
                    float: left;
                }
                .cognitive-icon{
                    width: 10%;
                    min-width: 100px;
                    margin-right:-120px;
                }
                .common-banner-title>img{
                    width:48px;
                    height:48px;
                    margin-top: 8px !important;
                }
                .cognitive-icon>img{
                    width:64px;
                    height:64px;
                    margin:0 auto;
                    margin-top: 20px;
                }
